class Toy:
    def __init__(self, name, price):
        self.name = name
        self.price = price
    def describeToy(self):
        print(f"She bought the {self.name} with a price {self.price}")
       
       
       
class Car(Toy):
    def __init__(self, name, price):
        super().__init__(name, price)
       
My_Toy = Car ("Hot wheels Supra", 6000)
My_Toy.describeToy()
